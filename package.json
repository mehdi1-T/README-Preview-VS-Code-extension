{
  "name": "readme-preview",
  "displayName": "README Preview",
  "description": "Preview your README files with GitHub-style rendering before pushing to GitHub",
  "version": "0.0.1",
  "keywords": [
    "readme",
    "preview",
    "markdown",
    "github",
    "documentation"
  ],
  "publisher": "Mehdi Talalha",
  "engines": {
    "vscode": "^1.109.0"
  },
  "categories": [
    "Other",
    "Visualization"
  ],
  "activationEvents": [
    "onView:readmeExplorer"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "views": {
      "readme-preview": [
        {
          "id": "readmeExplorer",
          "name": "README Files"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "readme-preview",
          "title": "README Preview",
          "icon": "$(book)"
        }
      ]
    },
    "commands": [
      {
        "command": "readme-preview.refresh",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "readme-preview.preview",
        "title": "Preview README",
        "icon": "$(open-preview)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "readme-preview.refresh",
          "when": "view == readmeExplorer",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "readme-preview.preview",
          "when": "view == readmeExplorer",
          "group": "inline"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.109.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.52.0",
    "eslint": "^9.39.2",
    "typescript": "^5.9.3",
    "ts-loader": "^9.5.4",
    "webpack": "^5.104.1",
    "webpack-cli": "^6.0.1",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
